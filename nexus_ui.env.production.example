# ============================================
# Nexus Next.js UI - Production Environment
# ============================================
# Copy this to .env.production and fill in your values

# API URL (internal Docker network)
NEXT_PUBLIC_API_URL=http://nexus-api:8080

# Database URL for Prisma (read-only for UI, uses MySQL on storage server)
DATABASE_URL="mysql://nexus:YOUR_PASSWORD@YOUR_STORAGE_SERVER_IP:3306/nexus"

# NextAuth (if using authentication)
NEXTAUTH_URL=http://YOUR_SERVER_IP
NEXTAUTH_SECRET=YOUR_NEXTAUTH_SECRET_HERE
